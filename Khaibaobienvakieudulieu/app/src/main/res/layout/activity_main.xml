<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Ứng dụng bé học toán"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp" android:textColor="@android:color/holo_red_dark"
            android:textAlignment="center"/>
    <EditText
            android:layout_height="wrap_content"
            android:inputType="number|text"
            tools:text="hieupham"
            android:ems="10"
            android:id="@+id/ed_input1"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:hint="numner one" android:layout_width="0dp"/>
    <EditText
            android:layout_height="wrap_content"
            android:inputType="number|text"
            tools:text="hieupham"
            android:ems="10"
            android:id="@+id/ed_input2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="numner two"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ed_input1" android:layout_width="0dp"/>
    <TextView
            android:text="Resulte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ketqua" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/ed_input2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"/>
    <Button
            android:text="+"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btn_cong" android:layout_marginTop="140dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_ketqua"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"/>
    <Button
            android:text="-"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btn_tru"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="268dp"
            app:layout_constraintTop_toTopOf="@+id/btn_cong"/>
    <Button
            android:text="*"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btn_nhan"
            app:layout_constraintTop_toBottomOf="@+id/btn_cong"
            app:layout_constraintStart_toStartOf="@+id/btn_cong"
            android:layout_marginTop="104dp"/>
    <Button
            android:text="/"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btn_chia"
            app:layout_constraintTop_toTopOf="@+id/btn_nhan"
            app:layout_constraintStart_toStartOf="@+id/btn_tru"/>
</android.support.constraint.ConstraintLayout>